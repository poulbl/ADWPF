<Window x:Class="ADWPF.Printer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADWPF"
        mc:Ignorable="d"
        Title="Printer" Height="450" Width="800">
    <Grid>
        <Button Content="print" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="75" Click="PrintSimpleTextButton_Click"/>
        <DocumentViewer x:Name="PreviewD" 

                         ShowPageBorders="True" Margin="75,0,-0.4,0"                          

                         />
    </Grid>
</Window>
